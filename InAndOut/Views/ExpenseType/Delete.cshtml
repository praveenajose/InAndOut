@model InAndOut.Models.ExpenseType
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50">Delete Expense Type</h2>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Name"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
        <div class="justify-content-center form-group row">
            <div class="col-8 row">
                <div class="col">
                    <input type="submit" class="btn btn-danger w-25" value="Delete" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-25">Back</a>
                </div>
            </div>

        </div>

    </div>
</form>

@*Client side validation only*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
