@model InAndOut.Models.ViewModels.ExpenseVM
@{
    ViewData["Title"] = "Update";
}

<form method="post" asp-action="Update">
    <div class="border p-3">
        <input asp-for="Expense.Id" hidden/>
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50">Update Expense</h2>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Expense.ExpenseName"></label>
            </div>
            <div class="col-4">
                <label asp-for="Expense.Amt"></label>
            </div>
            <div class="col-4">
                <label asp-for="Expense.ExpenseTypeId"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <input asp-for="Expense.ExpenseName" />
                <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
            </div>
            <div class="col-4">
                <input asp-for="Expense.Amt" />
                <span asp-validation-for="Expense.Amt" class="text-danger"></span>
            </div>
            <div class="col-4">
                <select asp-for="Expense.ExpenseTypeId" asp-items="@Model.TypeDropDown">
                    <option selected>--Select Expense Type--</option>
                </select>
                <span asp-validation-for="Expense.ExpenseTypeId" class="text-danger"></span>
            </div>
        </div>
        <div class="justify-content-center form-group row">
            <div class="col-8 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-25" value="Update" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger w-25">Back</a>
                </div>
            </div>

        </div>

    </div>
</form>

@*Client side validation only*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


