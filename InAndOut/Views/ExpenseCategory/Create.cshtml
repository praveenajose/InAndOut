@model InAndOut.Models.ExpenseCategory
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50">Add Expense Category</h2>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <label asp-for="ExpenseCategoryName"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="ExpenseCategoryName" />
                <span asp-validation-for="ExpenseCategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="justify-content-center form-group row">
            <div class="col-8 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-25" value="Create" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger w-25">Back</a>
                </div>
            </div>

        </div>

    </div>
</form>

@*Client side validation only*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

